<?xml version="1.0" encoding="utf-8"?>
<rotate xmlns:android="http://schemas.android.com/apk/res/android"
    android:fromDegrees="0"
    android:pivotX="50%"
    android:pivotY="50%"
    android:toDegrees="360">
    <shape
        android:innerRadiusRatio="3"
        android:shape="ring"
        android:thicknessRatio="10"
        android:useLevel="false">
        <size
            android:width="96dp"
            android:height="96dp" />
        <gradient
            android:centerX="0.5"
            android:centerY="0.5"
            android:endColor="@color/secondary_500"
            android:centerColor="@color/primary_500"
            android:startColor="@color/primary_200"
            android:type="sweep"
            android:useLevel="false" />
    </shape>
</rotate>